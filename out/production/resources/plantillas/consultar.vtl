<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="plugins/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="plugins/bootstrap/dist/css/bootstrap-theme.css">
</head>
<body>
##    menu
    #parse("plantillas/menu.vtl")


<div class="container">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Lista de Estudiantes</h3>
        </div>
            <table class="table table-striped">
                <tr>
                    <th>Editar</th>
                    <th>MatrÃ­cula</th>
                    <th>Nombre</th>
                    <th >Telefono</th>
                </tr>
                    #foreach( $estudiante in $estudiantes )
                        <tr>
                            #if($estudiante)
                                <td><button class="btn btn-info" onclick="window.location.href='http://localhost/crear-estudiante/$estudiante.getMatricula()'">Editar</button></td>
                                <td>$estudiante.getMatricula()</td>
                                <td>$estudiante.getNombre() $estudiante.getApellido()</td>
                                <td><span class="badge bg-red">$estudiante.getTelefono()</span></td>
                            #end
                        </tr>
                    #end
            </table>
    </div>
</div>


<scrip src="plugins/bootstrap/dist/js/bootstrap.js"></scrip>
</body>
</html>